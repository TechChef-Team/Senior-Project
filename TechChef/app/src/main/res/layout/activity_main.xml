



<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity" tools:ignore="MergeRootFrame">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="512px"
                android:layout_height="512px"
                android:id="@+id/customer_restaurant"
                android:src="@drawable/customer"
                android:layout_marginRight="60dp"
                android:onClick="showCustomerView"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CustomerView"
                android:layout_gravity="center"
                android:textSize="12pt"
                android:textColor="@color/brand_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="512px"
                android:layout_height="512px"
                android:id="@+id/waiter_restaurant"
                android:src="@drawable/waiter"
                android:layout_marginRight="60dp"
                android:onClick="showWaiterView"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waiter"
                android:layout_gravity="center"
                android:textSize="12pt"
                android:textColor="@color/brand_color"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="512px"
                android:layout_height="512px"
                android:id="@+id/chef_restaurant"
                android:src="@drawable/chef"
                android:onClick="showChefView"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Chef"
                android:layout_gravity="center"
                android:textSize="12pt"
                android:textColor="@color/brand_color"/>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>

